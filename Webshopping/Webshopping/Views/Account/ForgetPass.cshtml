@model AppUserModel
@{
	ViewData["title"] = "Forget Password";
}

<section>
	<!--form-->
	<div class="container">
		<div class="row">


			<div class="col-sm-8 col-sm-offset-1">
				<div class="signup-form">
					<!--sign up form-->
					<h2>Quên mật khẩu</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form asp-action="SendMailForgetPass" asp-controller="Account">

						<div class="form-group">
							<label>Email</label>
							<input asp-for="Email" placeholder="
							Nhập email đã đăng ký của bạn để đặt lại mật khẩu" class="form-control"> </input>
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>

						<button type="submit" class="btn btn-default">Gửi</button>
					</form>
				</div><!--/sign up form-->
			</div>
		</div>
	</div>
</section>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}