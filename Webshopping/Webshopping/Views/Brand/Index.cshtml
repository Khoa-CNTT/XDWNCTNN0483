@using Webshopping.Models

@model IEnumerable<ProductModel>
<div class="col-sm-3">
    @Html.Partial("_SidebarPartial")
</div>


<div class="col-sm-9 padding-right">
    <div class="features_items">
        <!--features_items-->
        <h2 class="title text-center">@ViewBag.slug</h2>
        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <div class="product-image-wrapper">
                    <a>
                        <div class="single-products">
                            <div class="productinfo text-center">
                                <img src="~/img/@item.Img" alt="@item.Name" width="100%" />
                                <h2>@item.Price.ToString("#,##0 VNĐ")</h2>
                                <p>@item.Name</p>
                                <p>Danh mục: @item.Category.Name</p>
                                <p>Thương hiệu: @item.Brand.Name</p>

                                @if (@item.Quantity > 0)
                                {
                                    <a class="btn btn-default add-to-cart">
                                        <i class="fa fa-shopping-cart"></i>
                                        Thêm giỏ hàng
                                    </a>
                                }
                                else
                                {
                                    <button class="btn btn-default">
                                        <i class="fa fa-shopping-cart"></i>
                                        Hết hàng
                                    </button>
                                }
                            </div>
                        </div>
                    </a>
                    <div class="choose">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <ul class="nav nav-pills nav-justified">
                                <li style="text-align: center;">
                                    <button class="btn btn-danger add-btn-wishlist" data-product_id="@item.Id">
                                        Yêu thích
                                    </button>
                                </li>

                                <li style="text-align: center;">
                                    <button class="btn btn-primary add-btn-compare" data-product_id="@item.Id">
                                        So sánh
                                    </button>
                                </li>
                            </ul>
                        }
                    </div>
                </div>
            </div>
        }

    </div><!--features_items-->



</div>