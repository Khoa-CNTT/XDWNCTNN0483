@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["title"] = "List Role";
}

<h3>List Role</h3>

<a class="btn btn-primary" asp-action="Create" asp-controller="Role">Add Role</a>

<table class="table" id="myTable">
    <thead>
        <tr>
            <th>#</th>
            <th>Role Name</th>
            <th>Role</th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody id="roleBodyTable">
        @foreach (var item in Model)
        {
            <tr>
                <td class="index-col"></td>
                <td>@item.Name</td>
                <td>@item.NormalizedName</td>


                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Role"
                        asp-route-Id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Role"
                        asp-route-Id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Lặp qua từng dòng trong tbody và đánh số thứ tự
            $('#roleBodyTable tr').each(function (index) {
                $(this).find('.index-col').text(index + 1);
            });
        });
    </script>
}
