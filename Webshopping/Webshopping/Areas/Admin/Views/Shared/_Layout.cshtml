		<script>
			function() {
				var message = '@TempData["success"]';
				if (message != '')
					Swal.fire(message);
			});
		</script>
		<script>
			new DataTable('#myTable', {
				layout: {
					topStart: {
						buttons: ['copy', 'csv', 'excel', 'pdf', 'print']
					}
				}
			});
		</script>
		@await RenderSectionAsync("Scripts", required: false)
		<script src="~/lib/jquery/jquery.min.js"></script>
</body>

</html>