			<!-- Chatbox Container -->
			<div id="gemini-chatbox">
				<div id="chatbox-header">
					<span>Perfume bot</span>
					<button id="chatbox-close-btn">×</button>
				</div>
				<div id="chatbox-messages">
					<!-- Tin nhắn sẽ được thêm vào đây bằng JavaScript -->
					<div class="message bot-message">Welcome to website My perfume! Tôi có thể giúp gì cho bạn?</div>
				</div>
				<div id="chatbox-input-area">
					<input type="text" id="chatbox-input" placeholder="Nhập câu hỏi của bạn...">
					<button id="chatbox-send-btn">Gửi</button>
				</div>
			</div>
			<button id="chatbox-toggle-btn">Chat</button> <!-- Nút để mở/đóng chatbox -->
		</div>
		<!--/Footer-->
		<script src="~/js/jquery.js"></script>
		<script src="~/js/bootstrap.min.js"></script>
		<script src="~/js/jquery.scrollUp.min.js"></script>
		<script src="~/js/price-range.js"></script>
		<script src="~/js/jquery.prettyPhoto.js"></script>
