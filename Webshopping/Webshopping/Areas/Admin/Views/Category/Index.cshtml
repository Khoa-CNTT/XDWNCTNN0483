@model IEnumerable<CategoryModel>

@{
    ViewData["title"] = "Category Listed";
}

<h3>Danh mục</h3>

@if (TempData["success"] != null)
{
    <div class="alert alert-success notification">
        @TempData["success"]
    </div>
}

@if (TempData["error"] != null)
{
    <div class="alert alert-danger notification">
        @TempData["error"]
    </div>
}

<!-- Your other content here -->
<a asp-area="admin" asp-action="Add" asp-controller="category" class="btn btn-primary btn-sm pt-1">Thêm danh mục</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tên Danh mục</th>
            <th scope="col">Mô tả của danh mục</th>
            <th scope="col">Slug danh mục</th>
            <th scope="col">Trạng thái</th>
            <th scope="col">Thao tác</th>
        </tr>
    </thead>
    <tbody id="categoryTableBody">
        @foreach (var item in Model)
        {
            <tr>
                <th class="index-col" scope="row"></th>
                <td>@item.Name</td>
                <td>@Html.Raw(item.Description)</td>
                <td>@item.Slug</td>

                <td>
                    @if (@item.Status == 1)
                    {
                        <span class="text text-success">Hiển thị</span>
                    }
                    else
                    {
                        <span class="text text-secondary">Ẩn</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                        Sửa
                    </a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const rows = document.querySelectorAll("#categoryTableBody tr");
            rows.forEach((row, index) => {
                const indexCell = row.querySelector(".index-col");
                if (indexCell) {
                    indexCell.textContent = index + 1;
                }
            });
        });
    </script>
}
